@{
    Layout = "~/Views/Shared/LayoutUsuario.cshtml";

}

<main>
    <!--Carousel de puestos-->
    <section>
        <div class="container">
            <br>
            <h3 class="text-center">Mis postulaciones</h3>
            <hr class="my-4">
            @foreach (var item in ViewBag.Postulaciones)
            {
                <div class="card w-100 puestoscard">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">@item.Descripcion</p>
                        <p class="card-text">Estado de postulación: @item.Estado</p>
                        <p class="card-text">Observación: @item.Observacion</p>
                    </div>
                </div>
                <br>
            }
        </div>
    </section>
</main>