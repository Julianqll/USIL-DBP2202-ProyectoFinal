@model Chamba.Models.Usuario
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/LayoutUsuario.cshtml";
}
<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <main role="main" class="inner cover">
        <section class="jumbotron jumbotron-fluid">
            <h6 class="display-4 text-center">Perfil</h6>
            <br>
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <img class="rounded-circle" src="@Model.FotoPerfilUsuario" alt="Generic placeholder image" width="140" height="140">
                        <h3>@Model.ApodoUsuario</h3>
                        <p>@Model.BiografiaUsuario</p>
                        <p><a class="btn btn-primary" href="#" role="button">Editar perfil</a></p>
                    </div>
                    <div class="col-lg-6">
                        <br>
                        <h2>Nombre Completo</h2>
                        <p>@Model.NombresUsuario @Model.ApellidosUsuario</p>
                        <h2>Estudios</h2>
                        <p>@Model.EstudiosUsuario</p>
                        <h2>Fecha de nacimiento</h2>
                        <p>@Model.FNacUsuario</p>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>