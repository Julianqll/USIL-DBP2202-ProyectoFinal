@model Chamba.Models.Postulacion
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/LayoutUsuario.cshtml";

}
<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <main role="main" class="inner cover">
        <section class="jumbotron jumbotron-fluid">
            <h1 class="display-4 text-center">Postular</h1>
            <div class="container">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Comentario</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" asp-for="ComentarioPostulante" rows="3" placeholder="Escriba un comentario"></textarea>
                        <span asp-validation-for="ComentarioPostulante" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Adjuntar enlace a Curriculum Vitae</label>
                        <input type="text" class="form-control" asp-for="CvPostulante" id="exampleFormControlFile1">
                        <span asp-validation-for="CvPostulante" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar postulación</button>
                </form>
            </div>
        </section>
    </main>
</div>