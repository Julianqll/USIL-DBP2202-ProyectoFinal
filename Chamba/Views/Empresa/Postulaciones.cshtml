@{
    Layout = "~/Views/Shared/LayoutEmpresa.cshtml";

}
<main>
    <!--Carousel de puestos-->
    <section>
        <div class="container">
            <br />
            <h3 class="text-center">Puestos creados</h3>
            <hr class="my-4">
            @foreach (var item in ViewBag.Postulaciones)
            {
                <div class="card w-100">
                    <button type="button" class="btn btn-primary">
                        @item.Puesto <span class="badge badge-light">@item.Vacantes</span>
                    </button>
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre @item.Apellido</h5>
                        <p class="card-text">Comentario del postulante: @item.Comentario</p>
                        <a href="/postulaciones" class="btn btn-primary">Revisar</a>
                    </div>
                </div>
                <br>
            }
        </div>
    </section>
</main>