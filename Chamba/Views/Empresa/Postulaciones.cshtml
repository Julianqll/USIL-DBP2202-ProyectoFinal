@{
    Layout = "~/Views/Shared/LayoutEmpresa.cshtml";

}
<main>
    <!--Carousel de puestos-->
    <section>
        <div class="container">
            <h1 class="display-4">Postulaciones</h1>
            <hr class="my-4">
            <div class="row">
                <div class="col-4">
                    <div class="list-group" id="list-tab" role="tablist">
                        @foreach (var item in ViewBag.Puestos)
                        {
                            <a class="list-group-item list-group-item-action active" id="@item.IdPuesto-list" data-toggle="list" href="#@item.IdPuesto" role="tab" aria-controls="home">@item.NombrePuesto</a>
                        }
                    </div>
                </div>
                <div class="col-8">
                    <div class="tab-content" id="nav-tabContent">
                                @foreach (var itemPost in ViewBag.Postulaciones)
                                {
                             
                                        <div class="card w-75">
                                        <div class="card-body">
                                                <h5 class="card-title">@itemPost.Nombre @itemPost.Apellido</h5>
                                                <p class="card-text">@itemPost.Comentario</p>
                                            <a href="#" class="btn btn-primary">Button</a>
                                        </div>
                                    </div>
                                    <br>
                                }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>