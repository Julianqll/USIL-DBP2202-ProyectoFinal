@model Chamba.Models.Login
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LayoutOthers.cshtml";
}

<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
    <main role="main" class="inner cover">
        <section class="jumbotron jumbotron-fluid">
            <h1 class="display-4 text-center">Iniciar sesión - Usuario</h1>
            <div class="container">
                <form action="/login" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Correo</label>
                        <input type="email" asp-for="Correo" class="form-control" id="correo" aria-describedby="emailHelp" placeholder="Ingrese su correo">
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Contraseña</label>
                        <input type="password" asp-for="Contraseña" class="form-control" id="contrasena" placeholder="Contraseña">
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </form>
            </div>
        </section>
    </main>
</div>